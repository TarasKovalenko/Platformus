@model Platformus.ECommerce.Backend.ViewModels.ECommerce.AttributeSelectorFormViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
<div class="pop-up-form__header">
  @Localizer["Attribute Selector"]
</div>
<div class="pop-up-form__content">
  <div class="item-selector-pop-up-form__items">
    <table class="table">
      <tr class="table__row">
        @foreach (var gridColumn in this.Model.GridColumns)
        {
          <th class="table__cell table__cell--header">@gridColumn.Name</th>
        }
      </tr>
      @foreach (var attribute in this.Model.Attributes)
      {
        <tr class="table__row @(attribute.Id == this.Model.AttributeId ? "table__row--selected" : null)" data-item-value="@attribute.Id">
          <td class="item-selector-pop-up-form__cell table__cell">@attribute.Feature.Name</td>
          <td class="item-selector-pop-up-form__cell table__cell">@attribute.Value</td>
        </tr>
      }
    </table>
  </div>
  <div class="pop-up-form__buttons buttons">
    <button class="buttons__button button button--positive" onclick="return platformus.forms.attributeSelectorForm.select();">@Localizer["Select"]</button>
    <button class="buttons__button button button--neutral" onclick="return platformus.forms.attributeSelectorForm.hideAndRemove();">@Localizer["Cancel"]</button>
  </div>
</div>