@model Platformus.ECommerce.Backend.ViewModels.Carts.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Cart"].Value : this.Localizer["Edit Cart"].Value);
  this.ViewBag.ActiveMenuItem = "carts";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <single-line-text-field asp-for="ClientSideId" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/carts")">@Localizer["Cancel"]</a>
  </div>
</form>