@model Platformus.ECommerce.Backend.ViewModels.Attributes.CreateOrEditViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
  this.ViewBag.Title = (this.Model.Id == null ? this.Localizer["Create Attribute"].Value : this.Localizer["Edit Attribute"].Value);
  this.ViewBag.ActiveMenuItem = "attributes";
}
@section title {
  @ViewBag.Title
}
<form class="form" method="post">
  <multilingual-single-line-text-field asp-for="Value" asp-localizations="this.Model.ValueLocalizations" />
  <numeric-field asp-for="Position" />
  <div class="form__buttons buttons">
    <button class="buttons__button button button--positive" type="submit">@Localizer["Save"]</button>
    <a class="buttons__button button button--neutral" href="@this.Context.Request.CombineUrl("/backend/attributes")">@Localizer["Cancel"]</a>
  </div>
</form>